---
import { Image } from 'astro:assets'
import about from '@assets/about.png'
import designer from '@assets/designer.png'
import TitleSection from './TitleSection.astro'
---

<section
	class="container_section flex flex-col gap-8 pb-24 pt-16 md:flex-row md:items-center md:justify-between"
	id="about"
>
	<div class="relative">
		<Image src={about} width={500} height={500} alt="about image" class="mx-auto md:mx-0" />
		<div
			class="absolute -bottom-10 left-1/2 hidden w-full max-w-[16rem] -translate-x-1/2 rounded-lg bg-white px-6 py-4 shadow-2xl md:inline-block"
		>
			<div class="flex gap-5">
				<Image src={designer} alt="designer" width={58} class="bg-cover" />
				<div class="flex flex-col">
					<h5 class="font-bold">Sarah Manrope</h5>
					<small class="pb-1 text-xs opacity-60">Designer</small>
					<div class="flex items-center gap-2">
						<img src="/star.svg" alt="star" class="w-5 bg-cover bg-center" />
						<img src="/star.svg" alt="star" class="w-5 bg-cover bg-center" />
						<img src="/star.svg" alt="star" class="w-5 bg-cover bg-center" />
						<img src="/star.svg" alt="star" class="w-5 bg-cover bg-center" />
						<img src="/star.svg" alt="star" class="w-5 bg-cover bg-center" />
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="mx-auto flex max-w-full flex-col gap-5">
		<TitleSection
			section="about us"
			title="We Help Improve Your Work Experience"
			description="We help you to increase self-confidence and train yourself in a direction."
		/>
		<div class="flex flex-col gap-4">
			<div class="flex items-center gap-3">
				<div class="bg-success rounded-full p-3">
					<img src="/check.svg" alt="check" class="bg-cover bg-center" />
				</div>
				<p class="w-full max-w-[16rem] text-sm">Study and produce creation to get a job</p>
			</div>
			<div class="flex items-center gap-3">
				<div class="bg-success rounded-full p-3">
					<img src="/check.svg" alt="check" class="bg-cover bg-center" />
				</div>
				<p class="w-full max-w-[16rem] text-sm">
					Up to date material and created by expert creators
				</p>
			</div>
			<div class="flex items-center gap-3">
				<div class="bg-success rounded-full p-3">
					<img src="/check.svg" alt="check" class="bg-cover bg-center" />
				</div>
				<p class="w-full max-w-[16rem] text-sm">
					Complete classes and projects and get a certificate from us
				</p>
			</div>
		</div>
	</div>
</section>
